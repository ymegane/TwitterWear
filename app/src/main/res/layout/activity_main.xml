<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="tweets"
            type="com.github.ymegane.android.twitter.wear.domain.entity.Tweets" />
    </data>
    <android.support.wearable.view.drawer.WearableDrawerLayout
        android:id="@+id/drawer_layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.ymegane.android.twitter.wear.presentation.activity.MainActivity"
        tools:deviceIds="wear">

        <android.support.wearable.view.WearableRecyclerView
            android:id="@+id/recycler_timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            style="@android:style/Widget.Material.Light.ProgressBar.Small"
            android:visibility="gone"/>

        <android.support.wearable.view.drawer.WearableNavigationDrawer
            android:id="@+id/top_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigation_style="single_page"/>

        <android.support.wearable.view.drawer.WearableActionDrawer
            android:id="@+id/bottom_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            app:drawer_content="@+id/drawer_content"
            app:peek_view="@+id/peek_view"
            app:show_overflow_in_peek="true">
            <FrameLayout
                android:id="@id/drawer_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_white_24dp"
                    android:layout_gravity="center_horizontal"/>
                <EditText
                    android:id="@+id/edit_tweet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:imeOptions="actionSend"
                    android:hint="@string/label_tweet"/>
            </FrameLayout>
            <LinearLayout
                android:id="@id/peek_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat_bubble_outline_black_24dp"/>
            </LinearLayout>
        </android.support.wearable.view.drawer.WearableActionDrawer>
    </android.support.wearable.view.drawer.WearableDrawerLayout>
</layout>
